{
  "dashboard": {
    "id": null,
    "title": "EatNGo Circuit Breaker 고급 모니터링",
    "tags": ["circuit-breaker", "advanced", "eatngo"],
    "timezone": "Asia/Seoul",
    "panels": [
      {
        "id": 1,
        "title": "Circuit Breaker 히트맵 (응답시간 분포)",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(circuit_breaker_calls_duration_bucket[5m])",
            "legendFormat": "{{ le }}"
          }
        ],
        "heatmap": {
          "xAxis": {"show": true},
          "yAxis": {"show": true, "logBase": 1, "min": null, "max": null},
          "yBucketBound": "auto"
        }
      },
      {
        "id": 2,
        "title": "Circuit Breaker 상태 타임라인",
        "type": "state-timeline",
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "circuit_breaker_state",
            "legendFormat": "{{ name }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 0,
              "fillOpacity": 80
            },
            "mappings": [
              {"options": {"0": {"text": "CLOSED", "color": "green"}}, "type": "value"},
              {"options": {"1": {"text": "OPEN", "color": "red"}}, "type": "value"},
              {"options": {"2": {"text": "HALF_OPEN", "color": "yellow"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 3,
        "title": "에러율 vs 응답시간 상관관계",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "rate(circuit_breaker_calls_total{result=\"failure\"}[5m]) / rate(circuit_breaker_calls_total[5m]) * 100",
            "legendFormat": "에러율 (%)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "axisLabel": "에러율 (%)",
              "axisPlacement": "left"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "응답시간"},
              "properties": [
                {
                  "id": "custom.axisPlacement",
                  "value": "right"
                },
                {
                  "id": "unit",
                  "value": "ms"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 4,
        "title": "Circuit Breaker 처리량 (TPS)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "rate(circuit_breaker_calls_total[1m])",
            "legendFormat": "TPS - {{ name }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "axisLabel": "Transactions/sec"
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Circuit Breaker 설정 정보",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "circuit_breaker_config_info",
            "legendFormat": "",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "indexByName": {},
              "renameByName": {
                "name": "Circuit Breaker",
                "failure_threshold": "실패 임계값",
                "timeout_duration": "타임아웃 (ms)",
                "recovery_timeout": "복구 타임아웃 (ms)"
              }
            }
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "10s"
  }
} 